@model IEnumerable<ContosoUniversity.Models.Restaurant>

@{
    ViewBag.Title = "Restaurants";
}

<h2>Restaurant List</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeatherSensitivity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeatherSensitivity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("Create New Restaurant", "Create")
</p>